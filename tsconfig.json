{
   "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "target": "ES2021",
      "module": "commonjs",
      "rootDir": "./src",
      "outDir": "./dist",
      "moduleResolution": "node",
      "baseUrl": "./src",
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "strictPropertyInitialization": false,
      "typeRoots": ["./src/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
    "ts-node": {
      "files": true
    }
}